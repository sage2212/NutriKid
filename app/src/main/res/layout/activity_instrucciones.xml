<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinst"
    tools:context=".instrucciones">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:fontFamily="@font/main"
            android:text="¿Como se juega? "
            android:textColor="#1244e9"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="180dp"
            android:layout_height="165dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/frutas"
            />

        <TextView
            android:id="@+id/txtcate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="El juego tendrá 6 categorías:\nFrutas, verduras, cereales, \nproteínas,\nleguminosas y actividad física."
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="180dp"
            android:layout_height="155dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/lev" />

        <TextView
            android:id="@+id/txtniveles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="225dp"
            android:gravity="center"
            android:text="Las cuales tendrán diferente número de niveles. En cada nivel se presentará una imagen e información relacionada. "
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="180dp"
            android:layout_height="155dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="345dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/nivelfruta" />

        <TextView
            android:id="@+id/txtganar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Deberás escribir o por audio de voz el nombre que corresponda a la imagen segun sus caracteristicas. Al terminar todas las categorías ganas! "
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>